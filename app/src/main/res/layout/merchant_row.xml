<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
   <LinearLayout
    android:id="@+id/coupon_details"   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal" >
    
       <CheckBox 
          android:id="@+id/checkboxBusiness"
          style="@style/check_business"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp"
         
          android:button="@drawable/checkbox_selector"
          android:layout_gravity="center_vertical|center_horizontal"
          android:focusable="false"
          />

       <LinearLayout
           android:id="@+id/linder"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="3dp"
           
           android:background="@color/white"
           android:orientation="horizontal" 
           android:weightSum="6">

           <ImageView
               android:id="@+id/businessLogo"
               style="@style/business_logo"
               android:layout_gravity="left"
               android:contentDescription="@string/app_company_logo"
               android:scaleType="fitXY"
               android:src="@drawable/merchant"
               android:layout_weight="2" />

           <LinearLayout
               android:id="@+id/app_company_info"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical|center_horizontal"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:orientation="vertical"
               android:layout_weight="3.5" >

               <TextView
                   android:id="@+id/txtViewbusinessName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:singleLine="false"
                   android:text="@string/app_company_name"
                   android:textColor="@color/black"
                   android:textSize="16sp" />

               <TextView
                   android:id="@+id/no_of_coupon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:singleLine="false"
                   android:text="12 Coupons"
                   android:textSize="12sp" />

               <TextView
                   android:id="@+id/view_coupon_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:textSize="12sp"
                   android:text="@string/view_coupons"
                   android:textColor="#ff6700"
                   android:textStyle="bold" />
           </LinearLayout>

           <ImageView
               android:id="@+id/row"
               android:layout_weight="0.5"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical|center_horizontal"
               android:src="@drawable/next" />
       </LinearLayout>
  </LinearLayout>
</LinearLayout>