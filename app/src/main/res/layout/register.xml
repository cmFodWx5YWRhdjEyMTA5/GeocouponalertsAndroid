<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="@color/light_green"
     >
  <ImageView 
      android:id="@+id/logo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:src="@drawable/logo_large"
      android:layout_marginTop="20dp"
      />
    <EditText
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:hint="Email"
        android:background="@drawable/shape"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text=""
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
         />
  <EditText
      android:id="@+id/txt_mobile_no"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_email"
      android:hint="Mobile No"
      android:background="@drawable/shape"
      android:layout_marginTop="10dp"
      android:padding="10dp"
      android:textColorHint="@color/white"
      android:inputType="phone"
      android:textColor="@color/white"
      />
    <EditText
        android:id="@+id/txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_mobile_no"
        android:hint="Password"
        android:background="@drawable/shape"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        android:textColor="@color/white"
         />
    <EditText
        android:id="@+id/txt_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_password"
        android:hint="Confirm Password"
        android:background="@drawable/shape"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        android:textColor="@color/white"
         />
    
    <Button 
       android:id="@+id/btn_register"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Register"
       android:textSize="18sp"
       android:layout_below="@+id/txt_confirm_password"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       android:background="@drawable/button_shape"
       android:textAllCaps="false"
        />
    <RelativeLayout
       android:id="@+id/rel_login"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/btn_register"
       android:paddingTop="10dp"
       android:gravity="center"
    > 
    <TextView 
       android:id="@+id/txtView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Already registered?"
       android:textSize="18sp"
       android:textColor="@color/black"
      />
    <TextView 
       android:id="@+id/lbl_login"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/txtView"
       android:paddingLeft="5dp"
       android:text="Login here"
       android:textSize="18sp"
       android:textColor="@color/white"
       android:gravity="center"
        />
    </RelativeLayout>
    <TextView 
       android:id="@+id/register_text"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/rel_login"
       android:gravity="center"
       android:text="By registering, I accept the"
       android:layout_marginTop="60dp"
       android:textSize="18sp"
       android:textColor="@color/black"
        />
    <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/register_text"  
       android:paddingTop="10dp"
       android:gravity="center"
    >
    <TextView 
        android:id="@+id/lbl_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_conditions"
        android:textColor="@color/white"
        android:textSize="16sp"
        />
    <TextView 
        android:id="@+id/and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="and"
        android:layout_toRightOf="@+id/lbl_terms"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        />
    <TextView 
        android:id="@+id/lbl_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy"
        android:layout_toRightOf="@+id/and"
        android:textColor="@color/white"
        android:textSize="16sp"
         android:paddingLeft="10dp"
        />
    
        
    </RelativeLayout>
</RelativeLayout>