<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
            android:id="@+id/pageActivation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            >
            <TextView 
               android:id="@+id/topTxt" 
               android:layout_width="match_parent" 
               android:layout_height="wrap_content"
               android:text="Only 7 days Left"
               android:textSize="22sp"
               android:background="@color/light_green"
               android:gravity="center"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               
                />

            <TextView
                android:id="@+id/alertTxt"
                android:layout_below="@+id/topTxt"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:layout_centerInParent="true"
               android:padding="10dp"
                android:layout_margin="5dp"
               android:gravity="center"
                android:textColor="#333333"
                android:layout_height="wrap_content"
                android:text="@string/expire_remaining_days" />
            
     </RelativeLayout>      
	  <RelativeLayout
            android:id="@+id/relBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pageActivation"
            
             >
       <View
                android:id="@+id/view1"
                style="@style/border_gray"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />     
        
          
    
    <LinearLayout
            android:id="@+id/relBottominner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
             >

            <Button
                android:id="@+id/btnSupportCharity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@color/light_green"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:text="Support a charity"
                />
            
            <Button
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="#9B9B9B"
                android:text="Remind me later"
                />
            
     </LinearLayout>
     
    </RelativeLayout>

</RelativeLayout>
