<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6000000"
    >

  <ImageView
      android:id="@+id/tick_img"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:src="@drawable/tick"
      android:layout_centerHorizontal="true"

      />
  <TextView
      android:id="@+id/v_coupon"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Verifying Coupon"
      android:layout_marginTop="20dp"
      android:textSize="25dp"
      android:textColor="#ffffff"
      android:textStyle="bold"
      android:gravity="center"
      android:layout_below="@+id/tick_img"
      />

  <ProgressBar
    android:id="@+id/progressBar1"    
    android:layout_width="match_parent"
    android:layout_height="35dp"
    style="?android:attr/progressBarStyleHorizontal"
    android:progressDrawable="@drawable/custom_progressbar"     
    android:layout_marginLeft="25dp"   
    android:layout_marginRight="25dp"
    android:layout_centerVertical="true"
    />


  <LinearLayout
      android:id="@+id/linearLocation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
      android:layout_margin="15dp"
      android:layout_below="@+id/v_coupon"
      android:orientation="vertical">

    <TextView
        android:id="@+id/textViewBussName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#33cc33"
        android:gravity="center_horizontal|center_vertical"
        android:text="Pizza Guy's"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listViewLocation"
          android:layout_width="match_parent"
          android:layout_height="150dp"
          android:background="@color/white">

      </ListView>



  </LinearLayout>

  <Button 
        android:id="@+id/close_screen_btn"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="Close"
        android:background="#33cc33"
        android:textColor="#ffffff"
        android:layout_below="@+id/linearLocation"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
</RelativeLayout>
