<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentRelativeLayout"
    android:background="#D3D3D3"
    >

    <LinearLayout
       android:id="@+id/chckboxLin"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:layout_marginLeft="7dp"
       android:layout_marginRight="7dp"
       >
        <ImageView
         android:id="@+id/checkUncheck"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/unselected_tick"
        />
    </LinearLayout>

    <RelativeLayout
      android:id="@+id/locDetailsRel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:background="@color/white"
      android:layout_toRightOf="@+id/chckboxLin"
     >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/address1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="address1"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="address2 address2 address2" >
        </TextView>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
       android:layout_margin="5dp"
        android:background="@color/white"
        android:layout_alignRight="@+id/linearLayout1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/distance"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:textColor="#33cc33"
            android:text="distance" />

        <ImageView
            android:id="@+id/distanceIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/directions"
            android:visibility="gone" />
    </LinearLayout>
    
    </RelativeLayout>

</RelativeLayout>