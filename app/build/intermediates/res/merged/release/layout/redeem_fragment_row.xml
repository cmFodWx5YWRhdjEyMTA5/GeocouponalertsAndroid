<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/greay_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context="com.ild.couponapp.user.Splash" >

     <LinearLayout 
       android:id="@+id/linearRoot"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
    
    <RelativeLayout 
       android:id="@+id/relheading"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       style="@style/green_bg"
       android:visibility="gone">
        <TextView 
	       android:id="@+id/starBucksHeading"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_centerInParent="true"
	       android:text="@string/starBucks"
	      android:textColor="@color/white" 
	      style="@style/bold_16"/>
        <ImageView  
            android:id="@+id/settingBack"
            style="@style/back_arrow" 
	       android:layout_alignParentLeft="true"
           android:background="@drawable/back"
           />
   </RelativeLayout>

    <RelativeLayout
        android:id="@+id/starBuckstxt"
        style="@style/white_bg_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/settingBacktag"
            style="@style/tag_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
        
            android:background="@drawable/ribbon_redeemed" />
         <TextView
        android:id="@+id/no_of_coupons"
      	android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:textSize="13sp" 
        android:textColor="#ffffff"
        android:visibility="gone"
        android:text="Unlimited"   
         /> 

        <TextView
            android:id="@+id/starBucksTitle"
            style="@style/starBucksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/settingBacktag"
            android:text="@string/starBucksTitle" />

        <TextView
            android:id="@+id/starBuckstxt1"
            style="@style/starBuckstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/starBucksTitle"
             android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/settingBacktag"
            android:text="@string/starBuckstxt" />

        <TextView
            android:id="@+id/expirestxt" 
            style="@style/starBucksorg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/starBuckstxt1"
            android:text="@string/redeem" />

        <TextView
            android:id="@+id/expires"
            style="@style/otherOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expirestxt"
            android:text="@string/otherOffer" />

        <LinearLayout
            android:id="@+id/redeemcalender"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/redeemcalender"
            android:layout_below="@+id/expires"
            android:orientation="horizontal" 
            android:visibility="gone">

            <Button
                android:id="@+id/button1"
                style="@style/save_btn"
                android:text="Redeem"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/calenderIcon"
                style="@style/calender_icon"
                android:layout_alignLeft="@+id/button1"
                android:background="@drawable/calender" />
        </LinearLayout>

        

    </RelativeLayout>
 
    </LinearLayout>
    
</RelativeLayout> 

