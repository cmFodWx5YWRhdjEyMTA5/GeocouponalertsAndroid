<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
            android:id="@+id/pageActivation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            >
            <TextView 
               android:id="@+id/topTxt" 
               android:layout_width="match_parent" 
               android:layout_height="wrap_content"
               android:text="Oops"
               android:textSize="22sp"
               android:background="@color/light_green"
               android:gravity="center"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               
                />

            <TextView
                android:id="@+id/alertTxt"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/topTxt"
                android:padding="15dp"
                android:gravity="center"
                android:textColor="#333333"
                android:layout_height="wrap_content"
                android:text="@string/activation_alert" />
            
     </RelativeLayout>      
  
    <RelativeLayout
            android:id="@+id/relBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pageActivation"
            
             >
       <View
                android:id="@+id/view1"
                style="@style/border_gray"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />     
        
          
    
    <RelativeLayout
            android:id="@+id/relBottominner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
                     
             >

            <TextView
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:padding="10dp"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

     </RelativeLayout> 
    </RelativeLayout>
</RelativeLayout>
